# Pastel Beige theme with simplified layout and updated assets

#:kivy 2.0.0

<HomeScreen>:
    MDFloatLayout:
        md_bg_color: 0.98, 0.94, 0.88, 1  # pastel beige

        Image:
            source: "images/pixel_bg.jpg"
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

        Image:
            source: "images/pixel_chef.png"
            size_hint: None, None
            size: dp(170), dp(170)
            pos_hint: {"center_x": 0.5, "y": 0.05}

        Image:
            source: "images/pixel_chef_kaffe.png"
            size_hint: None, None
            size: dp(220), dp(220)
            pos_hint: {"center_x": 0.8, "y": 0.52}

        MDTextField:
            id: search_input
            hint_text: "Enter recipe name"
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            size_hint_x: 0.8
            mode: "rectangle"
            line_color_focus: 0.91, 0.49, 0.62, 1
            text_color: 0.4, 0.26, 0.13, 1

        MDRaisedButton:
            text: "Search"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            md_bg_color: 0.91, 0.49, 0.62, 1
            text_color: 1, 1, 1, 1
            on_release: root.search_recipe()

        MDRaisedButton:
            text: "Random Recipe"
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            md_bg_color: 0.69, 0.44, 0.32, 1
            text_color: 1, 1, 1, 1
            on_release: root.get_random_recipe()

        MDLabel:
            id: score_label
            text: "Score: 0"
            halign: "right"
            pos_hint: {"right": 0.98, "top": 0.1}
            theme_text_color: "Custom"
            text_color: 0.91, 0.49, 0.62, 1

<DetailScreen>:
    MDFloatLayout:
        md_bg_color: 0.98, 0.94, 0.88, 1  # pastel beige

        Image:
            source: "images/pixel_bg.jpg"
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

        Image:
            source: "images/chef_recipe.png"
            size_hint: None, None
            size: dp(200), dp(200)
            pos_hint:{"center_x": 0.8, "y": 0.7}

        MDLabel:
            text: root.title
            halign: "center"
            font_style: "H5"
            size_hint_y: None
            height: self.texture_size[1] + dp(10)
            pos_hint: {"center_x": 0.5, "top": 0.95}
            theme_text_color: "Custom"
            text_color: 0.4, 0.26, 0.13, 1

        ScrollView:
            pos_hint: {"center_x": 0.5, "center_y": 0.45}
            size_hint: 0.9, 0.8

            BoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(10)

                MDLabel:
                    text: "[b]Ingredients:[/b]"
                    markup: True
                    theme_text_color: "Custom"
                    text_color: 0.69, 0.44, 0.32, 1
                    size_hint_y: None
                    height: self.texture_size[1]

                RecycleView:
                    viewclass: "MDLabel"
                    id: ingredients_list
                    RecycleBoxLayout:
                        default_size: None, dp(30)
                        default_size_hint: 1, None
                        size_hint_y: None
                        height: self.minimum_height
                        orientation: 'vertical'

                MDLabel:
                    text: "[b]Instructions:[/b]"
                    markup: True
                    theme_text_color: "Custom"
                    text_color: 0.69, 0.44, 0.32, 1
                    size_hint_y: None
                    height: self.texture_size[1]

                MDLabel:
                    text: root.instructions
                    theme_text_color: "Custom"
                    text_color: 0.4, 0.26, 0.13, 1
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.width, None
                    halign: "left"
                    valign: "top"

        Image:
            id: no_result_img
            source: "images/pixel_chef_no.png"
            size_hint: None, None
            size: dp(220), dp(220)
            pos_hint: {"center_x": 0.07, "y": 0.17}
            opacity: 0

        MDRaisedButton:
            text: "Back"
            pos_hint: {"center_x": 0.5, "y": 0.02}
            md_bg_color: 0.91, 0.49, 0.62, 1
            text_color: 1, 1, 1, 1
            on_release: app.sm.current = "home"
